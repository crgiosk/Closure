<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen10"
    tools:context=".view.fragments.DetailHeroeFragment">

    <TextView
        android:id="@+id/nombreHeroeTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Herore Name" />

    <TextView
        android:id="@+id/categorieHeroreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreHeroeTextView"
        android:layout_marginTop="10dp"
        android:text="Categoria Heroe" />

    <TextView
        android:id="@+id/tipoHeroe"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Support"/>

    <ImageView
        android:id="@+id/imageHeroeImageView"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:maxWidth="@dimen/maxSize200"
        android:maxHeight="@dimen/maxSize200"/>


</RelativeLayout>